<script>

var myChart = undefined

function init_my_chart() {

    $.getJSON(
    'test_table.json',
	function (data) {

	Highcharts.chart('myChart', {
	    chart: {
		zoomType: 'x',

	    },
	    title: {
		text: null
	    },
	    xAxis: {
		type: 'datetime',
	    },
	    yAxis: {
		title: {
		    text: 'Temperature'
		},
		max: 45,
		min: 0

	    },
	    legend: {
		enabled: false
	    },
	    plotOptions: {
		area: {
		    fillColor: {
			linearGradient: {
			    x1: 0,
			    y1: 0,
			    x2: 0,
			    y2: 1
			},
			stops: [
			    [0, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')],
			    [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
			]
		    },
		    marker: {
			radius: 4
		    },
		    lineWidth: 1,
		    states: {
			hover: {
			    lineWidth: 2
			}
		    },
		    threshold: null
		}
	    },

	    series: [{
		type: 'area',
		name: 'USD to EUR',
		data: data,
		turboThreshold: 40000
	    }],
	    navigation: {
		buttonOptions: {
		    enabled: false
		}
	    }
	});
    }
);

}


$(document).ready(function(){
    init_my_chart();
});

</script>
