<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/favicon.ico" type="image/ico" />

    <title>Beer Beer Beer </title>

    <!-- Bootstrap -->
    <link href="./vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="./vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="./vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- jquery -->
    <script src="./js/jquery.min.js"></script>
    <!-- bootstrap-progressbar -->
    <link href="./vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">

    <script src="./js/jquery-3.1.1.min.js"></script>
    <script src="./js/highcharts.js"></script>
    <script src="./js/exporting.js"></script>
    <script src="./js/export-data.js"></script>



    <script src="./js/Chart.min.js"> </script>

    <!-- Custom Theme Style -->
    <link href="./build/css/custom.min.css" rel="stylesheet">

    <% include chart %>

  </head>

  <body class="nav-md">
    <div class="container body">
      <div class="main_container">

	<% include sidebar %>
	<% include menubar %>

	<!-- page content -->
	<div class="right_col" role="main">
	  <!-- top tiles -->
	  <div class="row tile_count" align=center>
	    <div class="col-md-3 col-sm-6 col-xs-6 tile_stats_count">
	      <span  class="count_top"><i class="fa fa-beer"></i> recipe</span>
	      <div  class="count"> Citra IPA</div>
	    </div>
	    <div class="col-md-3 col-sm-6 col-xs-6 tile_stats_count">
	      <span class="count_top"><i class="fa fa-thermometer"></i> Current Temperature</span>
	      <div class="count">23 &deg;</div>
	    </div>
	    <div class="col-md-3 col-sm-6 col-xs-6 tile_stats_count">
	      <span class="count_top"><i class="fa fa-hourglass-half"></i> Remaining time</span>
	      <div class="count">21 days</div>
	    </div>
	    <div class="col-md-3 col-sm-6 col-xs-6 tile_stats_count">
	      <span class="count_top"><i class="fa fa-time"></i> Status</span>
	      <% if (daemon_status == 1) { %>
	      <div class="count">Running</div>
	      <% } else { %>
	      <div class="count">Stopped</div>
	      <% } %>
	    </div>

	    <!-- graph row -->
	    <div class="row">
	      <div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel dashboard_graph">

		  <div class="row x_title">
		    <div class="col-md-9">
		      <h3>Temperature monitoring</h3>
		    </div>
		  </div>

		  <!-- graph -->
		  <div class="col-md-9 col-sm-9 col-xs-12 ">

		    <div id="myChart" height="80%" style="margin: 0 auto"> </div>
		    <!-- <div id="chart_plot_01" class="demo-placeholder"></div> -->
		  </div>
		  <!-- end graph -->

		  <!-- statistics and start/stop button -->
		  <div class="col-md-3 col-sm-3 col-xs-12 bg-white">
		    <div class="x_title" align="center">
		      <h2> Statistics</h2>
		      <div class="clearfix"></div>
		    </div>
		    <p> fermentation progress : 22% </p>
		    <p> cooling ratio : 34% </p>
		    <p> threshold overrun: 3 </p>
		    <p> threshold underrun: 3 </p>
		  </div>
		  <form method="post">
		    <% if (daemon_status == 0) { %>
		    <input type="hidden" name="button_value" value="start" />
		    <button id ="butt" type="submit"  class="btn btn-success btn-lg">Start</button>
		    <% } else { %>
		    <input type="hidden" name="button_value" value="stop" />
		    <button id ="butt" type="submit"  class="btn btn-danger btn-lg">Stop</button>
		    <% } %>
		  </form>

		  <div class="clearfix"></div>
		  <!-- end statistics and start/stop button -->
		</div>
	      </div>
	    </div>
	    <!-- end graph row -->
	  </div>
	  <!-- /page content -->

	  <!-- footer content -->
	</div>
      </div>

      <!-- jQuery -->
      <script src="../vendors/jquery/dist/jquery.min.js"></script>
      <!-- Bootstrap -->
      <script src="../vendors/bootstrap/dist/js/bootstrap.min.js"></script>
      <!-- NProgress -->
      <script src="../vendors/nprogress/nprogress.js"></script>
      <!-- Chart.js -->
      <script src="../vendors/Chart.js/dist/Chart.min.js"></script>
      <!-- gauge.js -->
      <script src="../vendors/gauge.js/dist/gauge.min.js"></script>
      <!-- bootstrap-progressbar -->
      <script src="../vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>

      <!-- Custom Theme Scripts -->
      <script src="../build/js/custom.min.js"></script>

  </body>
</html>
